    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/movieListFragment">
    <fragment
        android:id="@+id/movieListFragment"
        android:name="com.kb.moviedb.ui.main.MovieListFragment"
        android:label="Trending List"
        tools:layout="@layout/movie_list_fragment">
        <action
            android:id="@+id/action_repoListFragment_to_repoDetailFragment"
            app:destination="@id/movieDetailFragment"
            />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.kb.moviedb.ui.main.MovieDetailFragment"
        android:label="RepoDetailFragment">
    </fragment>
